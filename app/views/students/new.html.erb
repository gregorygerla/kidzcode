<div class="small-12 large-6 large-centered columns">
	<div class="main_signup">
		<h3>Please create an account so we can better serve your child</h3>	
		<%= simple_form_for @student do |student| %>
		<%= student.label :email, "Best Email" %>
		<%= student.email_field :email %>
		<%= student.error :email, class: 'error' %>
		<%= student.label :password %>
		<%= student.password_field :password %>
		<%= student.error :password, class: 'error' %>
		<%= student.label :password_confirmation %>
		<%= student.password_field :password_confirmation %>
		<%= student.error :password_confirmation, class: 'error' %>
		<%= student.error :password_field, class: 'error' %>
		<%= student.submit %>
		<% end %>
	</div>
</div>
