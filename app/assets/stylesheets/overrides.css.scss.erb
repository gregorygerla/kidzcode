@import "foundation";
@mixin usefont {
	color:white;
	font-size:6em;line-height: 1;
	font-weight:bold;
	text-align:center;
}
@mixin eachblock{
	padding-top:4em;
	padding-bottom:4em;
}
@mixin ptag {
	font-size:1.1em;
}
//META INPUTS
@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
};
$main-color:#068fd5;
$main-background-tabbed: #d3d9dc;
$main-background-color: #f5f5f5;
$box-color: #ffffff;
$black-color: #000;
$blue-reserve: #006fd0;
$dark-blue: #28384f;
$blue-link: #295882;
$blue-link-hover: #295882;
$light-blue-link: #85c3dd;
body{
	margin:none;
}

.unique {
  background: url(<%= asset_path('llcgirl.jpg') %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

main {
  background: transparent !important;
  padding-left:0;
  padding-right:0;
  width: 100%;
}
.move{
	margin-top:40px;
}

.row.blue,.row.red,.row.white{
	max-width: initial;
	@include eachblock;
	h1,h3,h2{
	@include usefont;
	}
		h3{
		font-size:2em;
		}
		
	label {
	font-weight:bold;
	}
}
img{
	height:100px;
}
.row.blue {
	 background: rgba($main-color, 0.9);  

}
.row.white{
	background: rgba(white, 0.9); 
	color:black;
	h1,h2,h3{
		color:black;
	}
	h1{ margin-bottom:1em;
	}
	h2,h3,p{
	margin-top:20px;
	}
	p{
	@include ptag;
	}
	
}
.image_box {
	padding:20px;
}
.black_font{
	color:black;
}
.row.red {
	 background: rgba(green, 0.7);  
}
.main_signup {
	margin-top: 100px;
	
}
